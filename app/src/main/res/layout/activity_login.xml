<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="120dp"
    android:layout_height="240dp"
    tools:context="com.example.shivam.majorproject.LoginActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="@android:color/holo_blue_dark"
        android:textStyle="bold|italic"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:text="ENTER LOGIN DETAILS"
        />
<EditText
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:hint="Enter User Name"
    android:textColor="@android:color/black"
    android:gravity="left|center"
    android:id="@+id/login_screen_user_name_edit_text"
    android:layout_weight="1"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Enter Password"
        android:textColor="@android:color/black"
        android:gravity="left|center"
        android:id="@+id/login_screen_password_edit_text"
        android:layout_weight="1"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="SUBMIT"
        android:id="@+id/login_screen_submit_button"
        android:textStyle="italic"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_blue_dark"/>
</LinearLayout>
